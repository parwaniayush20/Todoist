<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%=kindOfDay%></h1>
    </div>


    <div class="box">

        <% newListItems.forEach(function(element){%>

        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%=element._id%>" onChange="this.form.submit()">
                <p><%=element.name%></p>
            </div>
            <input type="hidden" name="listName" value="<%=kindOfDay%>"></input>
        </form>

        <%})%>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="Add New Item" autocomplete="off">
            <button type="submit" name="list" value=<%=kindOfDay%>>+</button>
        </form>
    </div>

    <%- include("footer") -%>